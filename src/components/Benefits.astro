        { title: 'Efficiency', metric: '5 min', description: 'Business card organization of 50 cards completed with batch digitalization' },
        { title: 'Business Growth', metric: '40%', description: 'Follow-up rate improved from 15%' },
        { title: 'Environmental Consideration', metric: '500 cards', description: 'Annual paper reduction contributes to SDGs' }
