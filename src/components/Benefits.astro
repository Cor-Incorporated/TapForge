<script>
  // Benefits section language switching
  document.addEventListener("DOMContentLoaded", function () {
    // Get current language from URL or localStorage
    const urlParams = new URLSearchParams(window.location.search);
    const urlLang = urlParams.get('lang');
    const storedLang = localStorage.getItem('preferred-language');
    const currentLang = urlLang || storedLang || 'ja';
    
    // Force update benefits content immediately
    forceUpdateBenefitsContent(currentLang);
    
    // Also force update after delays to ensure DOM is ready
    setTimeout(() => {
      forceUpdateBenefitsContent(currentLang);
    }, 100);
    
    setTimeout(() => {
      forceUpdateBenefitsContent(currentLang);
    }, 500);
    
    setTimeout(() => {
      forceUpdateBenefitsContent(currentLang);
    }, 1000);
    
    setTimeout(() => {
      forceUpdateBenefitsContent(currentLang);
    }, 2000);
    
    // Also try to update when window loads completely
    window.addEventListener('load', () => {
      setTimeout(() => {
        forceUpdateBenefitsContent(currentLang);
      }, 500);
    });
    
    // Update benefits content based on language
    updateBenefitsContent(currentLang);
  });

  function forceUpdateBenefitsContent(lang) {
    // Force update benefit cards with hardcoded values
    const benefitData = {
      'ja': [
        { title: 'コスト削減', metric: '¥2,000', description: '年間500枚の紙名刺コストが0円に' },
        { title: '効率化', metric: '5分', description: '名刺整理が50枚一括デジタル化で完了' },
        { title: 'ビジネス拡大', metric: '40%', description: 'フォロー率が15%から向上' },
        { title: '環境配慮', metric: '500枚', description: '年間の紙削減でSDGsに貢献' }
      ],
      'en': [
