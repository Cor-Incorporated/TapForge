---
import { translations, type Language } from "../lib/i18n";

// Get current language from URL parameter
const url = new URL(Astro.request.url);
const lang = (url.searchParams.get('lang') as Language) || 'ja';
const t = translations[lang].benefits;

// Define icon configurations (static across all languages)
const iconConfigs = {
  costReduction: {
    metricColor: "text-green-600",
    icon: {
      bgColor: "bg-green-100",
      iconColor: "text-green-600",
      svgPath: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1",
    },
  },
  timeEfficiency: {
    metricColor: "text-blue-600",
    icon: {
      bgColor: "bg-blue-100",
      iconColor: "text-blue-600",
      svgPath: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    },
  },
  businessGrowth: {
    metricColor: "text-purple-600",
    icon: {
      bgColor: "bg-purple-100",
      iconColor: "text-purple-600",
      svgPath: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6",
    },
  },
  environmental: {
    metricColor: "text-orange-600",
    icon: {
      bgColor: "bg-orange-100",
      iconColor: "text-orange-600",
      svgPath: "M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z",
    },
  },
};

// Create benefits array from translations
const benefits = [
  {
    id: "cost-reduction",
    ...t.items.costReduction,
    ...iconConfigs.costReduction,
  },
  {
    id: "time-efficiency",
    ...t.items.timeEfficiency,
    ...iconConfigs.timeEfficiency,
  },
  {
    id: "business-growth",
    ...t.items.businessGrowth,
    ...iconConfigs.businessGrowth,
  },
  {
    id: "environmental",
    ...t.items.environmental,
    ...iconConfigs.environmental,
  },
];
---

<section id="pricing" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" id="benefits-title">
        {t.title}
      </h2>
      <p class="text-xl text-gray-600" id="benefits-subtitle">
        {t.subtitle}
      </p>
    </div>

    <!-- Key Benefits Grid -->
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16" id="benefits-grid">
      {
        benefits.map((benefit, index) => (
          <div class="group relative">
            <!-- Glow Effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 rounded-2xl blur-lg opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
            
            <!-- Card -->
            <div class="relative bg-white/80 backdrop-blur-sm rounded-2xl p-8 text-center shadow-lg hover:shadow-2xl transition-all duration-500 border border-white/20 group-hover:scale-105">
              <!-- Premium Badge -->
              <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-r from-red-500 to-pink-500 rounded-full flex items-center justify-center shadow-xl">
                <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              
              <!-- Icon with gradient background -->
              <div class="relative mb-6">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-500 rounded-2xl blur-sm opacity-30"></div>
                <div
                  class={`relative w-20 h-20 ${benefit.icon.bgColor} rounded-2xl flex items-center justify-center mx-auto shadow-lg`}
                >
                  <svg
                    class={`w-10 h-10 ${benefit.icon.iconColor}`}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={benefit.icon.svgPath}
                    />
                  </svg>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-gray-900 transition-colors" id={`benefit-${index}-title`}>
                {benefit.title}
              </h3>
              
              <!-- Metric with gradient text -->
              <div class={`text-4xl font-black bg-gradient-to-r ${benefit.metricColor.replace('text-', 'from-').replace('-600', '-600 to-').replace('-600', '-500')} bg-clip-text text-transparent mb-3`} id={`benefit-${index}-metric`}>
                {benefit.metric}
              </div>
              
              <p class="text-sm text-gray-600 leading-relaxed group-hover:text-gray-700 transition-colors" id={`benefit-${index}-description`}>
                {benefit.description}
              </p>
              
              <!-- Decorative line -->
              <div class="mt-6 w-16 h-1 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full mx-auto opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
          </div>
        ))
      }
      </div>
    </div>

    <!-- Detailed Comparison Table -->
    <div class="max-w-6xl mx-auto">
      <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl overflow-hidden border border-white/20">
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-purple-50/30 to-pink-50/50"></div>
      
      <div class="relative px-8 py-8 bg-gradient-to-r from-gray-50/80 to-gray-100/80 border-b border-gray-200/50">
        <div class="text-center">
          <h3 class="text-3xl font-black bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-2" id="comparison-title">
            {t.comparison.title}
          </h3>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mx-auto"></div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th
                class="px-6 py-4 text-left text-sm font-semibold text-gray-900"
                id="table-header-item">{t.comparison.headers.item}</th
              >
              <th
                class="px-6 py-4 text-center text-sm font-semibold text-gray-900"
                id="table-header-traditional">{t.comparison.headers.traditional}</th
              >
              <th
                class="px-6 py-4 text-center text-sm font-semibold text-gray-900"
                id="table-header-tapforge">{t.comparison.headers.tapforge}</th
              >
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-annual-cost"
                >{t.comparison.rows.annualCost.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-annual-cost" class="text-xl font-bold text-gray-700">{t.comparison.rows.annualCost.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-red-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-red-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-annual-cost" class="text-xl font-bold text-red-600">{t.comparison.rows.annualCost.tapforge}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 font-medium text-center" id="annual-cost-note">{t.comparison.rows.annualCost.tapforgeNote}</div>
                  </div>
                </div>
              </td>
            </tr>
            <tr class="bg-gray-50/30 hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-organization-time"
                >{t.comparison.rows.organizationTime.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-organization-time" class="text-xl font-bold text-gray-700">{t.comparison.rows.organizationTime.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-orange-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-orange-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-organization-time" class="text-xl font-bold text-orange-600">{t.comparison.rows.organizationTime.tapforge}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 font-medium text-center" id="organization-time-note">{t.comparison.rows.organizationTime.tapforgeNote}</div>
                  </div>
                </div>
              </td>
            </tr>
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-follow-up-rate"
                >{t.comparison.rows.followUpRate.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-follow-up-rate" class="text-xl font-bold text-gray-700">{t.comparison.rows.followUpRate.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-purple-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-purple-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-follow-up-rate" class="text-xl font-bold text-purple-600">{t.comparison.rows.followUpRate.tapforge}</span>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
            <tr class="bg-gray-50/30 hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-multilingual"
                >{t.comparison.rows.multilingual.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-multilingual" class="text-xl font-bold text-gray-700">{t.comparison.rows.multilingual.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-blue-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-blue-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-multilingual" class="text-xl font-bold text-blue-600">{t.comparison.rows.multilingual.tapforge}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 font-medium text-center" id="multilingual-note">{t.comparison.rows.multilingual.tapforgeNote}</div>
                  </div>
                </div>
              </td>
            </tr>
            <tr class="hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-environmental-impact"
                >{t.comparison.rows.environmentalImpact.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-environmental-impact" class="text-xl font-bold text-gray-700">{t.comparison.rows.environmentalImpact.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-green-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-environmental-impact" class="text-xl font-bold text-green-600">{t.comparison.rows.environmentalImpact.tapforge}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 font-medium text-center" id="environmental-impact-note">{t.comparison.rows.environmentalImpact.tapforgeNote}</div>
                  </div>
                </div>
              </td>
            </tr>
            <tr class="bg-gray-50/30 hover:bg-gray-50/50 transition-colors">
              <td class="px-6 py-6 text-sm font-semibold text-gray-800" id="row-update-ease"
                >{t.comparison.rows.updateEase.item}</td
              >
              <td class="px-6 py-6 text-sm text-gray-500 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-gray-100 rounded-2xl p-4 shadow-lg border border-gray-200 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-gray-500 rounded-full"></div>
                      <span id="traditional-update-ease" class="text-xl font-bold text-gray-700">{t.comparison.rows.updateEase.traditional}</span>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-6 text-center">
                <div class="relative inline-flex items-center justify-center w-full max-w-[200px]">
                  <div class="relative bg-white rounded-2xl p-4 shadow-lg border border-indigo-100 w-full h-20 flex flex-col justify-center">
                    <div class="flex items-center justify-center space-x-2">
                      <div class="w-4 h-4 bg-indigo-500 rounded-full animate-pulse"></div>
                      <span id="tapforge-update-ease" class="text-xl font-bold text-indigo-600">{t.comparison.rows.updateEase.tapforge}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 font-medium text-center" id="update-ease-note">{t.comparison.rows.updateEase.tapforgeNote}</div>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      </div>
    </div>

    <!-- Target Message -->
    <div class="mt-12 text-center max-w-5xl mx-auto">
      <div class="bg-blue-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-blue-900 mb-4" id="target-title">
          {t.target.title}
        </h3>
        <p class="text-lg text-blue-800 mb-6" id="target-description">
          {t.target.description}
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm text-blue-700">
          <span class="bg-blue-100 px-3 py-1 rounded-full" id="tag-global"
            >{t.target.tags.global}</span
          >
          <span class="bg-blue-100 px-3 py-1 rounded-full" id="tag-ai">{t.target.tags.ai}</span>
          <span class="bg-blue-100 px-3 py-1 rounded-full" id="tag-no-app">{t.target.tags.noApp}</span>
          <span class="bg-blue-100 px-3 py-1 rounded-full" id="tag-cost">{t.target.tags.costReduction}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import {
    getCurrentLanguage,
    initializeOnDOMReady,
    setupLanguageChangeListeners,
    updateElementContent,
    updateMultipleElements
  } from '../lib/languageUtils';
  import { translations } from '../lib/i18n';

  // Benefits initialization function
  function initializeBenefits() {
    const currentLang = getCurrentLanguage();
    updateBenefitsContent(currentLang);
  }

  // Initialize on DOM ready with utility function
  initializeOnDOMReady(initializeBenefits);

  // Setup language change listeners
  setupLanguageChangeListeners((newLang) => {
    updateBenefitsContent(newLang);
  });

  function updateBenefitsContent(lang) {
    const t = translations[lang]?.benefits || translations["ja"].benefits;

    // Update main title and subtitle
    updateElementContent('benefits-title', t.title);
    updateElementContent('benefits-subtitle', t.subtitle);

    // Update benefit cards
    for (let i = 0; i < t.items.costReduction ? 4 : t.benefits?.length || 0; i++) {
      const benefitKeys = ['costReduction', 'timeEfficiency', 'businessGrowth', 'environmental'];
      const benefitData = t.items ? t.items[benefitKeys[i]] : t.benefits[i];

      if (benefitData) {
        updateElementContent(`benefit-${i}-title`, benefitData.title);
        updateElementContent(`benefit-${i}-metric`, benefitData.metric);
        updateElementContent(`benefit-${i}-description`, benefitData.description);
      }
    }

    // Update comparison table
    if (t.comparison) {
      const updates = [
        { id: 'comparison-title', content: t.comparison.title },
        { id: 'table-header-item', content: t.comparison.headers.item },
        { id: 'table-header-traditional', content: t.comparison.headers.traditional },
        { id: 'table-header-tapforge', content: t.comparison.headers.tapforge },
        { id: 'row-annual-cost', content: t.comparison.rows.annualCost.item },
        { id: 'annual-cost-note', content: t.comparison.rows.annualCost.tapforgeNote },
        { id: 'row-organization-time', content: t.comparison.rows.organizationTime.item },
        { id: 'organization-time-note', content: t.comparison.rows.organizationTime.tapforgeNote },
        { id: 'row-follow-up-rate', content: t.comparison.rows.followUpRate.item },
        { id: 'row-multilingual', content: t.comparison.rows.multilingual.item },
        { id: 'multilingual-note', content: t.comparison.rows.multilingual.tapforgeNote },
        { id: 'row-environmental-impact', content: t.comparison.rows.environmentalImpact.item },
        { id: 'environmental-impact-note', content: t.comparison.rows.environmentalImpact.tapforgeNote },
        { id: 'row-update-ease', content: t.comparison.rows.updateEase.item },
        { id: 'update-ease-note', content: t.comparison.rows.updateEase.tapforgeNote },
        { id: 'traditional-annual-cost', content: t.comparison.rows.annualCost.traditional },
        { id: 'traditional-organization-time', content: t.comparison.rows.organizationTime.traditional },
        { id: 'traditional-follow-up-rate', content: t.comparison.rows.followUpRate.traditional },
        { id: 'traditional-multilingual', content: t.comparison.rows.multilingual.traditional },
        { id: 'traditional-environmental-impact', content: t.comparison.rows.environmentalImpact.traditional },
        { id: 'traditional-update-ease', content: t.comparison.rows.updateEase.traditional },
        { id: 'tapforge-annual-cost', content: t.comparison.rows.annualCost.tapforge },
        { id: 'tapforge-organization-time', content: t.comparison.rows.organizationTime.tapforge },
        { id: 'tapforge-follow-up-rate', content: t.comparison.rows.followUpRate.tapforge },
        { id: 'tapforge-multilingual', content: t.comparison.rows.multilingual.tapforge },
        { id: 'tapforge-environmental-impact', content: t.comparison.rows.environmentalImpact.tapforge },
        { id: 'tapforge-update-ease', content: t.comparison.rows.updateEase.tapforge }
      ];

      updateMultipleElements(updates);
    }

    // Update target section
    if (t.target) {
      const targetUpdates = [
        { id: 'target-title', content: t.target.title },
        { id: 'target-description', content: t.target.description },
        { id: 'tag-global', content: t.target.tags.global },
        { id: 'tag-ai', content: t.target.tags.ai },
        { id: 'tag-no-app', content: t.target.tags.noApp },
        { id: 'tag-cost', content: t.target.tags.costReduction }
      ];

      updateMultipleElements(targetUpdates);
    }
  }
</script>
