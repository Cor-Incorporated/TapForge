    const currentData = benefitData[lang] || benefitData['ja'];
    
    // Force update each benefit card - try multiple selectors
    for (let i = 0; i < 4; i++) {
      // Try multiple ways to find elements
      const titleElement = document.getElementById(`benefit-${i}-title`) || 
                          document.querySelector(`[id*="benefit"][id*="${i}"][id*="title"]`) ||
                          document.querySelectorAll('h3')[i];
      
      const metricElement = document.getElementById(`benefit-${i}-metric`) || 
                           document.querySelector(`[id*="benefit"][id*="${i}"][id*="metric"]`) ||
                           document.querySelectorAll('.text-4xl')[i];
      
      const descElement = document.getElementById(`benefit-${i}-description`) || 
                         document.querySelector(`[id*="benefit"][id*="${i}"][id*="description"]`) ||
                         document.querySelectorAll('p')[i + 4]; // Skip first few p tags
      
      console.log(`Looking for benefit ${i} elements:`, {
        title: titleElement,
        metric: metricElement,
        desc: descElement
      });
      
      // Force update title
      if (titleElement && currentData[i]) {
        titleElement.innerHTML = currentData[i].title;
        titleElement.style.cssText = `
          color: #1f2937 !important;
          font-weight: bold !important;
          font-size: 1.25rem !important;
          display: block !important;
          visibility: visible !important;
          opacity: 1 !important;
          position: relative !important;
          z-index: 999 !important;
        `;
        console.log(`Force updated benefit ${i} title: ${currentData[i].title}`);
      } else {
        console.log(`Title element ${i} not found or no data`);
      }
      
      // Force update metric
      if (metricElement && currentData[i]) {
        metricElement.innerHTML = currentData[i].metric;
        metricElement.style.cssText = `
          color: #3b82f6 !important;
          font-weight: 900 !important;
          font-size: 2.25rem !important;
          display: block !important;
          visibility: visible !important;
          opacity: 1 !important;
