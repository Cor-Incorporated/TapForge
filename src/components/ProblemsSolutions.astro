    <!-- Cost Comparison Chart -->
    <div class="mt-16 relative">
      <!-- Background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 rounded-3xl blur-2xl opacity-10"></div>
      
      <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl p-10 border border-white/20">
        <div class="text-center mb-12">
          <h3 class="text-4xl font-black bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-4">
            コスト比較
          </h3>
          <div class="w-32 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Traditional Business Cards -->
          <div class="group">
            <div class="text-center">
              <h4 class="text-xl font-bold text-gray-700 mb-6">従来の紙名刺</h4>
              <div class="relative bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-8 border border-red-200/50 shadow-lg group-hover:shadow-xl transition-all duration-300 w-full max-w-[400px] mx-auto">
                <div class="text-4xl font-black text-red-600 mb-3">¥3,000</div>
                <div class="text-sm text-gray-600 mb-6 font-medium">年間300枚</div>
                <div class="space-y-3 text-sm text-gray-600">
                  <div class="flex items-center justify-center">
                    <div class="w-2 h-2 bg-red-400 rounded-full mr-3"></div>
                    印刷費: ¥3,000
                  </div>
                  <div class="flex items-center justify-center">
                    <div class="w-2 h-2 bg-red-400 rounded-full mr-3"></div>
                    整理時間: 30分
                  </div>
                  <div class="flex items-center justify-center">
                    <div class="w-2 h-2 bg-red-400 rounded-full mr-3"></div>
                    環境負荷: 高
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- TapForge -->
          <div class="group relative">
            <!-- Premium Badge -->
            <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-r from-red-500 to-pink-500 rounded-full flex items-center justify-center shadow-2xl z-10">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center">
                <span class="text-2xl font-black text-red-500">!</span>
              </div>
            </div>
            
            <div class="text-center">
              <h4 class="text-xl font-bold text-gray-700 mb-6">TapForge</h4>
              <div class="relative bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl p-8 border-4 border-green-200/50 shadow-xl group-hover:shadow-2xl transition-all duration-300 group-hover:scale-105 w-full max-w-[400px] mx-auto">
                <!-- Glow effect -->
                <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-500 rounded-2xl blur-sm opacity-20"></div>
                
                <div class="relative">
                  <div class="text-4xl font-black bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent mb-3">¥3,000</div>
                  <div class="text-sm text-gray-600 mb-6 font-medium">初期費用のみ</div>
                  <div class="space-y-4 text-sm text-gray-600">
                    <div class="flex items-center justify-center">
                      <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-red-400 to-pink-500 rounded-full blur-sm opacity-75"></div>
                        <div class="relative w-10 h-10 bg-white rounded-full border-2 border-red-500 flex items-center justify-center shadow-lg">
                          <span class="text-xs font-black text-red-600">¥0</span>
                        </div>
                      </div>
                      <span class="ml-3 font-bold text-red-600">月額料金: ¥0</span>
                    </div>
                    <div class="flex items-center justify-center">
                      <div class="relative">
                        <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-500 rounded-full blur-sm opacity-75"></div>
                        <div class="relative w-10 h-10 bg-white rounded-full border-2 border-orange-500 flex items-center justify-center shadow-lg">
                          <span class="text-xs font-black text-orange-600">5分</span>
                        </div>
                      </div>
                      <span class="ml-3 font-bold text-orange-600">整理時間: 5分</span>
                    </div>
                    <div class="flex items-center justify-center">
                      <div class="relative">
