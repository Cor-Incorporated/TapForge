---
import { features, pricingPlans } from "../config/features";
import { getTranslation, type Language } from "../lib/i18n";
---

<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <div class="flex items-center justify-center mb-4">
        <img
          src="/images/favicon.png"
          alt="TapForge"
          class="w-12 h-12 rounded-lg mr-3"
        />
        <h2
          class="text-3xl md:text-4xl font-bold text-gray-900"
          id="features-title"
        >
          TapForgeの特徴
        </h2>
      </div>
      <p class="text-xl text-gray-600" id="features-subtitle">
        最新技術で名刺交換を革新
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8" id="features-grid">
      {
        features.map((feature, index) => (
          <div class="text-center p-6 rounded-xl hover:shadow-lg transition-shadow">
            <div
              class={`w-16 h-16 ${feature.icon.bgColor} rounded-full flex items-center justify-center mx-auto mb-4`}
            >
              <svg
                class={`w-8 h-8 ${feature.icon.iconColor}`}
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={feature.icon.svgPath}
                />
              </svg>
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 mb-2"
              id={`feature-${index}-title`}
            >
              {feature.title}
            </h3>
            <p
              class="text-gray-600 text-sm"
              id={`feature-${index}-description`}
            >
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>

    <!-- Pricing Information -->
    <div
      class="mt-16 bg-gradient-to-r from-blue-50 to-green-50 rounded-2xl p-8"
    >
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-4" id="pricing-title">
          料金体系（税込）
        </h3>
        <div
          class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto"
          id="pricing-grid"
        >
          {
            pricingPlans.map((plan, index) => (
              <div class="bg-white rounded-lg p-6 shadow-sm">
                <h4
                  class="font-semibold text-gray-900 mb-2"
                  id={`plan-${index}-title`}
                >
                  {plan.title}
                </h4>
                <div
                  class={`text-2xl font-bold ${plan.priceColor} mb-2`}
                  id={`plan-${index}-price`}
                >
                  {plan.price}
                </div>
                <p
                  class="text-sm text-gray-600"
                  id={`plan-${index}-description`}
                >
                  {plan.description}
                </p>
              </div>
            ))
          }
        </div>
        <p
          class="text-lg font-semibold text-gray-700 mt-6"
          id="pricing-tagline"
        >
          業界最安値で技術を民主化
        </p>
      </div>
    </div>

    <!-- Demo Video Section -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-8" id="demo-title">
        デモ動画
      </h3>
      <div class="bg-gray-100 rounded-2xl p-8 max-w-2xl mx-auto">
        <div
          class="aspect-video bg-gray-200 rounded-lg flex items-center justify-center"
        >
          <div class="text-center">
            <svg
              class="w-16 h-16 text-gray-400 mx-auto mb-4"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"
              ></path>
            </svg>
            <p class="text-gray-600" id="demo-description">
              AI名刺撮影デモ動画
            </p>
            <p class="text-sm text-gray-500" id="demo-note">
              （YouTubeリンク予定）
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Features section language switching
  document.addEventListener("DOMContentLoaded", function () {
    // Get current language from URL or localStorage
    const urlParams = new URLSearchParams(window.location.search);
    const urlLang = urlParams.get("lang");
    const storedLang = localStorage.getItem("preferred-language");
    const currentLang = urlLang || storedLang || "ja";

    // Update features content based on language
