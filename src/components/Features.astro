    const t = translations[lang] || translations["ja"];

    // Update main title and subtitle
    const titleElement = document.getElementById("features-title");
    if (titleElement) {
      titleElement.textContent = t.title;
    }

    const subtitleElement = document.getElementById("features-subtitle");
    if (subtitleElement) {
      subtitleElement.textContent = t.subtitle;
    }

    // Update features
    for (let i = 0; i < t.features.length; i++) {
      const titleElement = document.getElementById(`feature-${i}-title`);
      const descElement = document.getElementById(`feature-${i}-description`);

      if (titleElement) {
        titleElement.textContent = t.features[i].title;
      }
      if (descElement) {
        descElement.textContent = t.features[i].description;
      }
    }

    // Update pricing
    const pricingTitleElement = document.getElementById("pricing-title");
    if (pricingTitleElement) {
      pricingTitleElement.textContent = t.pricing.title;
    }

    for (let i = 0; i < t.pricing.plans.length; i++) {
      const titleElement = document.getElementById(`plan-${i}-title`);
      const priceElement = document.getElementById(`plan-${i}-price`);
      const descElement = document.getElementById(`plan-${i}-description`);

      if (titleElement) {
        titleElement.textContent = t.pricing.plans[i].title;
      }
      if (priceElement) {
        priceElement.textContent = t.pricing.plans[i].price;
      }
      if (descElement) {
